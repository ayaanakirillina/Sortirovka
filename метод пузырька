по убыванию
int z;
for (int i = 0; i < 1000; i++) {
  for (int j = i + 1; j < 1000; j++) {
    if (a[i] < a[j]) { 
    z = a[i];
    a[i] = a[j];
    a[j] = z;
  }
}
по возрастанию
int z;
for (int i = 0; i < 1000; i++) {
  for (int j = i + 1; j < 1000; j++) {
    if (a[i] > a[j]) { 
    z = a[i];
    a[i] = a[j];
    a[j] = z;
  }
}
